{
	"extends": "@sofie-automation/code-standard-preset/ts/tsconfig.lib",
	"include": ["*/src/**/__tests__/**/*", "*/src/**/__mocks__/**/*", "*/src/**/integrationTests/**/*"],
	"exclude": ["node_modules/**", "webui/**", "openapi/**"],
	"compilerOptions": {
		"baseUrl": "./",
		"resolveJsonModule": true,
		"types": ["jest", "node"],
		"composite": true,
		"noEmit": true,
		"skipLibCheck": true,
		"importHelpers": false // To mitigate tslib errors which are meaningless
	},
	"references": [
		{ "path": "./blueprints-integration/tsconfig.build.json" },
		{ "path": "./server-core-integration/tsconfig.build.json" },
		{ "path": "./mos-gateway/tsconfig.build.json" },
		{ "path": "./playout-gateway/tsconfig.build.json" },
		{ "path": "./job-worker/tsconfig.build.json" },
		{ "path": "./corelib/tsconfig.build.json" },
		{ "path": "./shared-lib/tsconfig.build.json" },
		{ "path": "./meteor-lib/tsconfig.build.json" },
		{ "path": "./live-status-gateway/tsconfig.build.json" }
	]
}
